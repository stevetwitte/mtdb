<%= link_to local_assigns[:link_path] do %>
  <div class="w-52 h-52 <%= local_assigns[:bg_class] %> mr-4 mb-4 p-6 text-center flex justify-center flex-col">

    <%= image_tag local_assigns[:image_path], class: 'h-24' if local_assigns[:image_path] %>
    <span class="text-2xl text-black uppercase"><%= local_assigns[:text] %></span>
  </div>
<% end %>
